<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <style>
        html {
            height: 100%;
        }
        body {
            background-color: #f5f5dc;
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh;
            margin: 0;
            font-family: 'Georgia', serif;
        }
        .login-box {
            width: 400px;
            padding: 40px;
            background: rgba(255, 255, 255, 0.9);
            box-sizing: border-box;
            box-shadow: 0 15px 25px rgba(0, 0, 0, 0.3);
            border-radius: 10px;
            position: relative;
        }
        .login-box h2 {
            margin: 0 0 30px;
            padding: 0;
            color: #8B4513;
            text-align: center;
        }
        .login-box .user-box {
            position: relative;
        }
        .login-box .user-box input {
            width: 100%;
            padding: 10px 0;
            font-size: 16px;
            color: #333;
            margin-bottom: 30px;
            border: none;
            border-bottom: 1px solid #8B4513;
            outline: none;
            background: transparent;
        }
        .login-box .user-box label {
            position: absolute;
            top: 0;
            left: 0;
            padding: 10px 0;
            font-size: 16px;
            color: #8B4513;
            transition: 0.5s;
        }
        .login-box .user-box input:focus ~ label,
        .login-box .user-box input:valid ~ label {
            top: -20px;
            left: 0;
            color: #8B4513;
            font-size: 12px;
        }
        .login-box button {
            width: 100%;
            padding: 10px 0;
            font-size: 16px;
            color: #fff;
            background: #8B4513;
            border: none;
            border-radius: 5px;
            outline: none;
            transition: background 0.3s;
            margin-bottom: 10px;
        }
        .login-box button:hover {
            background: #A0522D;
        }
        .register-link {
            display: block;
            width: 100%;
            padding: 10px 0;
            font-size: 16px;
            color: #fff;
            background: #8B4513;
            text-align: center;
            text-decoration: none;
            border-radius: 5px;
            transition: background 0.3s;
        }
        .register-link:hover {
            background: #A0522D;
        }
        /* Hints Box Styles */
        .hints-box {
            display: none;
            background-color: #ffcc00;
            color: #000;
            padding: 10px;
            text-align: center;
            position: absolute;
            top: -40px;
            left: 50%;
            transform: translateX(-50%);
            border-radius: 5px;
            width: 90%;
            z-index: 10;
        }
    </style>
    <title>Login</title>
</head>
<body>
    <div class="login-box">
        <h2>Login</h2>
         <!-- Hints box -->
        <div id="hints" class="hints-box"><%= error ? error : '' %></div>
        <form action="/login" method="POST" onsubmit="return showHints();">
            <div class="user-box">
                <input type="text" name="username" required>
                <label>Username</label>
            </div>
            <div class="user-box">
                <input type="password" name="password" required>
                <label>Password</label>
            </div>
            <button type="submit">Login</button>
        </form>
        <a href="/register" class="register-link">Register</a>
    </div>

    <script>
        function showHints() {
            const errorMessage = "<%= error ? error : '' %>";
            const hintsBox = document.getElementById('hints');
            if (errorMessage) {
                hintsBox.innerText = errorMessage;
                hintsBox.style.display = 'block';
                return false;
            }
            return true;
        }
    </script>
</body>
</html>
